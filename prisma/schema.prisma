datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // App specific
  onboarded     Boolean   @default(false)
  streakCount   Int       @default(0)
  streakLastDate String?  // YYYY-MM-DD
  
  profile       UserProfile?
  savedComps    SavedCompetition[]
  missions      Mission[]
  completedMissions MissionCompletion[]
  checklists    Checklist[]
  planners      Planner[]
  submittedComps Competition[] @relation("SubmittedComps")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProfile {
  id              String  @id @default(cuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tracks          String  // JSON: ["coding", "econ"]
  preferredMode   String  // "Any" | "Online" | ...
  preferredRegion String  // "Any" | ...
  levelByTrack    String  // JSON: { "coding": "Beginner" }
  locationText    String?
}

model SavedCompetition {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  compId    String 
  
  createdAt DateTime @default(now())

  @@unique([userId, compId])
}

model Mission {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  track       String   // "coding"
  text        String
  fromCompId  String?
  createdAt   DateTime @default(now())
}

model MissionCompletion {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  missionId String   // ID string (can be "1" from static or "uuid" from assigned)
  track     String   // "coding"
  
  @@unique([userId, track, missionId])
}

model Checklist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  compId    String
  items     String   // JSON: ["rules", "submit"]
  
  @@unique([userId, compId])
}

model Planner {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  compId     String
  targetDate String
  notes      String
  
  @@unique([userId, compId])
}

model Competition {
  id          String   @id @default(cuid())
  title       String
  track       String
  mode        String
  region      String
  level       String
  deadline    String
  description String
  format      String
  eligibility String
  howToApply  String
  tags        String   // JSON array
  applyUrl    String
  officialUrl String
  createdAt   DateTime @default(now())
  
  status          String    @default("PENDING") // PENDING, APPROVED, REJECTED
  rejectionReason String?
  source          String    @default("manual") // "manual", "csv-import", "seed"
  isFeatured      Boolean   @default(false)
  verifiedSource  Boolean   @default(false)
  adminNotes      String?

  submittedByUserId String?
  submittedBy       User?   @relation("SubmittedComps", fields: [submittedByUserId], references: [id])

  // -- Hygiene Fields --
  canonicalTitle  String?
  canonicalHost   String?
  urlStatusCode   Int?
  urlFinal        String?
  urlCheckedAt    DateTime?
  duplicateOfId   String?
  duplicateOf     Competition?  @relation("Duplicates", fields: [duplicateOfId], references: [id]) // Self-relation
  duplicates      Competition[] @relation("Duplicates")
  qualityFlags    String?       // JSON string array
  enrichmentState String        @default("NEW") // NEW, NEEDS_REVIEW, READY_TO_ENRICH, ENRICHED
  confidence      Float?
  lastError       String?

  @@index([status, createdAt])
  @@index([status, track])
}

// NextAuth
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WorkerLock {
  id          String   @id @default(cuid())
  name        String   @unique
  lockedUntil DateTime
}
